#include 

int main() {
std::cout << "Добро пожаловать в мир веб-новеллы!" << std::endl;

// Главный сюжет
std::cout << "Вы проснулись в странном мире, где все решения принимаете вы. Чем займетесь?" << std::endl;
std::cout << "1. Исследовать окружающую местность" << std::endl;
std::cout << "2. Встретиться с местными жителями" << std::endl;

int choice;
std::cin >> choice;

if(choice == 1) {
    std::cout << "Вы отправились исследовать окружающую местность и наткнулись на загадочный храм." << std::endl;
} else if(choice == 2) {
    std::cout << "Вы встретились с местными жителями, которые предложили помочь вам разгадать тайны этого мира." << std::endl;
} else {
    std::cout << "Вы не смогли принять решение и потерялись во времени и пространстве." << std::endl;
}

return 0;
